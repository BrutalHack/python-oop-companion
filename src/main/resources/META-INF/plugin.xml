<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>io.intenics.pycharmfilenames</id>
    <name>Pycharm File Names</name>
    <vendor>Intenics</vendor>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Python"
                         implementationClass="io.intenics.pycharmfilenames.inspections.FileNameMismatchInspectionTool"
                         displayName="PythonFileNameInspection" groupName="PythonFileNameInspection"
                         shortName="PythonFileNameInspection"
                         enabledByDefault="true" level="ERROR"/>
        <annotator language="Python"
                   implementationClass="io.intenics.pycharmfilenames.annotator.FileNameMismatchAnnotator"
                   id="Python File Name Mismatch"/>

    </extensions>

</idea-plugin>
